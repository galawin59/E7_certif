{
  "project": {
    "name": "E7_Certification_Azure_Data_Engineer",
    "version": "1.0.0",
    "description": "Certification Data Engineer - Architecture Medallion avec Azure SQL Database",
    "environment": "Production",
    "created": "2025-10-29",
    "lastUpdated": "2025-10-29"
  },
  "azure": {
    "subscription": {
      "region": "France Central",
      "resourceGroupName": "rg-datalake-ficp"
    },
    "storage": {
      "accountName": "ficpstorageaccount",
      "containers": {
        "bronze": "bronze",
        "silver": "silver", 
        "gold": "gold",
        "logs": "logs"
      }
    },
    "dataFactory": {
      "name": "df-ficp",
      "pipelines": [
        "pipeline-ficp-etl",
        "pipeline-medallion-processing"
      ]
    },
    "sqlDatabase": {
      "serverName": "sql-server-ficp-5647",
      "databaseName": "db-ficp-datawarehouse",
      "adminLogin": "ficpadmin",
      "adminPassword": "FicpDataWarehouse2025!",
      "tier": "Basic",
      "maxSize": "2GB",
      "tables": {
        "consultations": "ConsultationsFICP",
        "inscriptions": "InscriptionsFICP", 
        "radiations": "RadiationsFICP",
        "kpis": "KPIDashboardFICP"
      }
    }
  },
  "dataProcessing": {
    "medallionArchitecture": {
      "bronze": {
        "description": "Données brutes ingérées",
        "format": "CSV", 
        "retention": "365 days"
      },
      "silver": {
        "description": "Données nettoyées et transformées",
        "format": "Parquet",
        "retention": "180 days"
      },
      "gold": {
        "description": "Données agrégées et KPIs métier",
        "format": "Parquet",
        "retention": "Permanent"
      }
    },
    "etl": {
      "schedule": "Daily at 02:00 UTC",
      "batchSize": 1000,
      "errorThreshold": 5,
      "retryAttempts": 3
    }
  },
  "businessIntelligence": {
    "powerBI": {
      "connectionType": "DirectQuery",
      "refreshSchedule": "Every 4 hours",
      "dashboards": [
        "FICP_Consultations_Overview",
        "FICP_Inscriptions_Monitoring",
        "FICP_KPIs_Executive"
      ]
    },
    "kpis": {
      "consultations": {
        "totalConsultations": "COUNT(*) FROM ConsultationsFICP",
        "montantTotal": "SUM(MontantDemande) FROM ConsultationsFICP", 
        "tauxAcceptation": "Pourcentage demandes favorables"
      },
      "inscriptions": {
        "totalInscriptions": "COUNT(*) FROM InscriptionsFICP",
        "montantMoyenIncident": "AVG(MontantIncident) FROM InscriptionsFICP"
      }
    }
  },
  "security": {
    "authentication": {
      "type": "SQL Authentication",
      "encryptionInTransit": true,
      "firewallRules": [
        "Azure Services",
        "Local Development IP"
      ]
    },
    "dataClassification": {
      "level": "Internal",
      "categories": [
        "Financial Data",
        "Customer Information",
        "Business Metrics"
      ]
    }
  },
  "monitoring": {
    "logging": {
      "level": "Information",
      "retention": "30 days",
      "destinations": ["Azure Storage", "Local Files"]
    },
    "alerting": {
      "errorThreshold": 10,
      "performanceThreshold": "5 seconds",
      "notifications": ["Email", "SMS"]
    }
  },
  "development": {
    "python": {
      "version": "3.9+",
      "virtualenv": ".venv",
      "dependencies": [
        "pandas>=2.0.0",
        "numpy>=1.24.0",
        "pyodbc>=4.0.39",
        "sqlalchemy>=2.0.0",
        "faker>=19.0.0",
        "schedule>=1.2.0"
      ]
    },
    "powerShell": {
      "version": "5.1+",
      "modules": [
        "Az>=10.0.0",
        "SqlServer>=22.0.0"
      ]
    }
  },
  "certification": {
    "requirements": {
      "architecture": "Medallion (Bronze/Silver/Gold)",
      "cloudPlatform": "Microsoft Azure",
      "database": "Azure SQL Database",
      "etlTool": "Custom Python + PowerShell",
      "biTool": "Power BI",
      "dataVolume": "3000+ records",
      "timespan": "10+ months"
    },
    "validation": {
      "infrastructureDeployed": true,
      "dataImported": true,
      "queriesTested": true,
      "biReady": true,
      "documented": true
    }
  }
}